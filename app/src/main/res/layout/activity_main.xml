<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/linearLayout">
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconCompareCantors"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            custom:srcCompat="@android:drawable/ic_input_get"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/buttonCompareCantors"
            android:text="PorÃ³wnaj kantory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iconCurrencySearch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            custom:srcCompat="@android:drawable/ic_input_get"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/buttonCurrencySearch"
            android:text="Wyszukiwanie walut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/iconHistory"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              custom:srcCompat="@android:drawable/ic_input_get"
              android:layout_marginTop="10dp"/>
          <Button
              android:id="@+id/buttonHistory"
              android:text="Historia"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"/>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
              android:id="@+id/iconSettings"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              custom:srcCompat="@android:drawable/ic_input_get"
              android:layout_marginTop="10dp"/>
          <Button
              android:id="@+id/buttonSettings"
              android:text="Ustawienia"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"/>
      </LinearLayout>
  </LinearLayout>

</RelativeLayout>